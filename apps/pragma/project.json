{
  "name": "pragma",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/pragma/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/pragma",
        "format": ["cjs"],
        "bundle": true,
        "minify": true,
        "thirdParty": true,
        "main": "apps/pragma/src/main.ts",
        "tsConfig": "apps/pragma/tsconfig.app.json",
        "assets": ["apps/pragma/action.yml"],
        "generatePackageJson": false,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "legalComments": "none",
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "pragma:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "pragma:build:development"
        },
        "production": {
          "buildTarget": "pragma:build:production"
        }
      }
    }
  }
}
